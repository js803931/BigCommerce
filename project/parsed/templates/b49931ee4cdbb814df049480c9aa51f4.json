{"components/products/reviews":"<div class=\"productView__collapse-container review-collapse\">\r\n    <a href=\"##\" class=\"productView__collapse-menu productView__collapse-menu\" data-collapsible=\"productView__collapse-reviews\"\r\n        aria-controls=\"productView__collapse-account\" aria-expanded=\"false\">\r\n        <p class=\"productView__collapse-title\">REVIEWS</p>\r\n\r\n        <span class=\"productView__nav-menu-plus icon icon--add\">\r\n            <svg class=\"productView__nav-plus\">\r\n                <use xlink:href=\"#icon-add\"></use>\r\n            </svg>\r\n        </span>\r\n\r\n        <span class=\"icon icon--remove productView__nav-menu-minus\">\r\n            <svg class=\"productView__nav-minus\">\r\n                <use xlink:href=\"#icon-remove\"></use>\r\n            </svg>\r\n        </span>\r\n    </a>\r\n\r\n    <ul class=\"productView__collapse-list productView__collapse-item productView__collapse-content review-collapse-content\" id=\"productView__collapse-reviews\"\r\n        aria-hidden=\"true\">\r\n        <li>\r\n\r\n\r\n            <section class=\"toggle productReviews\" id=\"product-reviews\" data-product-reviews>\r\n                {{#if settings.show_product_reviews}}\r\n                <span class=\"productView-reviewLink productView__write-review\">\r\n                    <a class=\"\" href=\"{{product.url}}{{#if is_ajax}}#write_review{{/if}}\" {{#unless is_ajax }}\r\n                        data-reveal-id=\"modal-review-form\" {{/unless}}>\r\n                        WRITE REVIEW\r\n                    </a>\r\n                </span>\r\n                {{> components/products/modals/writeReview}}\r\n                {{/if}}\r\n                <h4 class=\"toggle-title\">\r\n                    {{lang 'products.reviews.header' total=reviews.total}}\r\n                    <a class=\"toggleLink is-open\" data-collapsible href=\"#productReviews-content\">\r\n                        <span class=\"toggleLink-text toggleLink-text--on\">\r\n                            {{lang 'products.reviews.hide'}}\r\n                        </span>\r\n                        <span class=\"toggleLink-text toggleLink-text--off\">\r\n                            {{lang 'products.reviews.show'}}\r\n                        </span>\r\n                    </a>\r\n                </h4>\r\n                <div class=\"toggle-content is-open\" id=\"productReviews-content\" aria-hidden=\"false\">\r\n                    <ul class=\"productReviews-list\" id=\"productReviews-list\">\r\n                        {{#each reviews.list}}\r\n                            {{#if @index '<=' 2}}\r\n                        <li class=\"productReview\">\r\n                            <article itemprop=\"review\" itemscope itemtype=\"http://schema.org/Review\">\r\n                                <header>\r\n                                    <div class=\"productReview-date\">{{date}}</div>\r\n                                    <span class=\"productReview-rating rating--small\" itemprop=\"reviewRating\" itemscope\r\n                                        itemtype=\"http://schema.org/Rating\">\r\n                                        {{> components/products/ratings rating=rating}}\r\n                                        <span class=\"productReview-ratingNumber\" itemprop=\"ratingValue\">{{ rating }}</span>\r\n                                    </span>\r\n                                    <h5 itemprop=\"name\" class=\"productReview-title\">{{ title }}</h5>\r\n                                    <span itemprop=\"reviewComment\">{{ comment }}</span>\r\n                                </header>\r\n                                <p itemprop=\"reviewBody\" class=\"productReview-body\">{{{text}}}</p>\r\n                                {{#if name}}\r\n                                <meta itemprop=\"author\" content=\"{{name}}\">\r\n                                <p class=\"productReview-author\">\r\n                                    {{lang 'custom.review-name' name=name }}\r\n                                </p>\r\n                                {{else}}\r\n                                <p class=\"productReview-author\">\r\n                                    {{lang 'custom.review-name' name=(lang 'products.reviews.anonymous_poster')}}\r\n                                </p>\r\n                                {{/if}}      \r\n                            </article>\r\n                        </li>\r\n                        \r\n                        {{else}}\r\n                        {{#if @index '>' 2}}\r\n                        <li class=\"productReview productReview--hidden\">\r\n                            <article itemprop=\"review\" itemscope itemtype=\"http://schema.org/Review\">\r\n                                <header>\r\n                                    <div class=\"productReview-date\">{{date}}</div>\r\n                                    <span class=\"productReview-rating rating--small\" itemprop=\"reviewRating\" itemscope\r\n                                        itemtype=\"http://schema.org/Rating\">\r\n                                        {{> components/products/ratings rating=rating}}\r\n                                        <span class=\"productReview-ratingNumber\" itemprop=\"ratingValue\">{{ rating }}</span>\r\n                                    </span>\r\n                                    <h5 itemprop=\"name\" class=\"productReview-title\">{{ title }}</h5>\r\n                                    <span itemprop=\"reviewComment\">{{ comment }}</span>\r\n                                </header>\r\n                                <p itemprop=\"reviewBody\" class=\"productReview-body\">{{{text}}}</p>\r\n                                {{#if name}}\r\n                                <meta itemprop=\"author\" content=\"{{name}}\">\r\n                                <p class=\"productReview-author\">\r\n                                    {{lang 'custom.review-name' name=name }}\r\n                                </p>\r\n                                {{else}}\r\n                                <p class=\"productReview-author\">\r\n                                    {{lang 'custom.review-name' name=(lang 'products.reviews.anonymous_poster')}}\r\n                                </p>\r\n                                {{/if}}\r\n                                \r\n                            </article>\r\n                        </li>\r\n                        {{/if}}\r\n                        {{/if}}\r\n                        {{/each}}\r\n                        <a class=\"show-more-reviews\" href=\"##\">+ See More</a>\r\n                    </ul>\r\n                    \r\n                </div>\r\n            </section>\r\n\r\n            <!--  -->\r\n            {{#if reviews.total}}\r\n            {{/if}}\r\n            <!--  -->\r\n\r\n            {{{snippet 'reviews'}}}\r\n        </li>\r\n    </ul>\r\n</div>\n","components/products/modals/writeReview":"<link rel=\"stylesheet\" href=\"../content/css/star-rating.css\">\r\n<script src=\"../content/js/star-rating.js\"></script>\r\n\r\n\r\n<div id=\"modal-review-form\" class=\"modal write-review__container\" data-reveal>\r\n    {{inject 'reviewRating' (lang 'forms.validate.reviews.rating')}}\r\n    {{inject 'reviewSubject' (lang 'forms.validate.reviews.title')}}\r\n    {{inject 'reviewComment' (lang 'forms.validate.reviews.comment')}}\r\n    {{inject 'reviewEmail' (lang 'forms.validate.common.email_address')}}\r\n    <div class=\"modal-header\">\r\n        <h2 class=\"modal-header-title\">{{lang 'custom.love-feedback'}}</h2>\r\n        <a href=\"#\" class=\"modal-close\" aria-label=\"{{lang 'common.close'}}\" role=\"button\">\r\n            <span aria-hidden=\"true\">&#215;</span>\r\n        </a>\r\n    </div>\r\n    <div class=\"modal-body\">\r\n        <div class=\"writeReview-productDetails\">\r\n            <div class=\"writeReview-productImage-container\">\r\n                <img class=\"lazyload\" data-sizes=\"auto\" src=\"{{cdn 'img/loading.svg'}}\" data-src=\"{{getImage product.main_image 'product_size' (cdn theme_settings.default_image_product)}}\" alt=\"product image\">\r\n            </div>\r\n            <h6 class=\"product-brand\">{{ product.brand.name }}</h6>\r\n            <h5 class=\"product-title\">{{ product.title }}</h5>\r\n        </div>\r\n        <form class=\"form writeReview-form review-form\" action=\"{{ urls.product.post_review }}\" method=\"post\">\r\n            <fieldset class=\"form-fieldset\">\r\n                \r\n                <div class=\"form-field star-wrapper\">\r\n                    <label class=\"form-label\" for=\"rating-rate\">\r\n                        <span class=\"req-asterisk\">*</span>{{lang 'products.reviews.rating_label'}}:\r\n                    </label>\r\n                    <select id=\"rating-rate\" class=\"form-select star-rating\" name=\"revrating\">\r\n                        <option value=\"\">{{lang 'products.reviews.select_rating'}}</option>\r\n                        {{#eachIndex \"54321\"}}\r\n                        {{#if ../product.reviews.selected_rating '===' item}}\r\n                        <option selected value=\"{{item}}\">{{lang (concat 'products.reviews.rating.' item) }}</option>\r\n                        {{else}}\r\n                        <option value=\"{{item}}\">{{lang (concat 'products.reviews.rating.' item) }}</option>\r\n                        {{/if}}\r\n                        {{/eachIndex}}\r\n                    </select>\r\n                </div>\r\n\r\n                <!-- Review Subject -->\r\n                {{> components/common/forms/text id=\"revtitle\" name=\"revtitle\" required=\"true\" class=\"test\" label=(lang\r\n                'custom.review-title') value=product.reviews.title}}\r\n\r\n                <!-- Name -->\r\n                {{#if product.reviews.author}}\r\n                {{> components/common/forms/text id=\"revfromname\" name=\"revfromname\" required=\"true\" class=\"test\"\r\n                label=(lang\r\n                'products.reviews.form_write.name') value=product.reviews.author}}\r\n                {{else}}\r\n                {{> components/common/forms/text id=\"revfromname\" name=\"revfromname\" required=\"true\" class=\"test\"\r\n                label=(lang\r\n                'products.reviews.form_write.name') value=customer.name}}\r\n                {{/if}}\r\n\r\n                <!-- Comments -->\r\n                {{> components/common/forms/multiline id=\"revtext\" name=\"revtext\" class=\"review-body\" class=\"test\"\r\n                required=\"true\"\r\n                label=(lang 'products.reviews.form_write.comments') value=product.reviews.text}}\r\n\r\n                {{> components/custom/review-option-select }}\r\n                {{{product.reviews.recaptcha.markup}}}\r\n\r\n                \r\n                <!-- Email -->\r\n                {{#if product.reviews.email}}\r\n                {{> components/common/forms/text id=\"email\" name=\"email\" required=\"true\" label=(lang\r\n                'products.reviews.form_write.email') value=product.reviews.email}}\r\n                {{else}}\r\n                {{> components/common/forms/text id=\"email\" name=\"email\" required=\"true\" label=(lang\r\n                'products.reviews.form_write.email') value=customer.email}}\r\n                {{/if}}\r\n               \r\n\r\n                <div class=\"form-field\">\r\n                    <input type=\"submit\" class=\"button button--primary review-submit\" value=\"{{lang 'products.reviews.form_write.submit_value' }}\">\r\n                </div>\r\n                <input type=\"hidden\" name=\"product_id\" value=\"{{ product.id }}\">\r\n                <input type=\"hidden\" name=\"action\" value=\"post_review\">\r\n                {{#if product.reviews.throttleToken}}<input type=\"hidden\" name=\"throttleToken\" value=\"{{product.reviews.throttleToken}}\">{{/if}}\r\n            </fieldset>\r\n        </form>\r\n    </div>\r\n</div>\r\n","components/products/ratings":"{{#for 1 5}}\r\n    {{#if ../this.rating '>=' $index}}\r\n        <span class=\"icon icon--ratingFull\">\r\n            <svg>\r\n                <use xlink:href=\"#icon-star\" />\r\n            </svg>\r\n        </span>\r\n    {{else}}\r\n        <span class=\"icon icon--ratingEmpty\">\r\n            <svg>\r\n                <use xlink:href=\"#icon-star\" />\r\n            </svg>\r\n        </span>\r\n    {{/if}}\r\n{{/for}}\r\n{{{snippet 'product_rating'}}}\r\n","components/common/forms/text":"<div class=\"form-field\" id=\"{{id}}\" data-validation=\"{{validation}}\" {{#if private_id}}data-type=\"{{private_id}}\"{{/if}}>\r\n    <label class=\"form-label\" for=\"{{id}}_input\">\r\n        {{#if required}}\r\n           <span class=\"req-asterisk\">*</span>{{label}}:\r\n        {{/if}}\r\n    </label>\r\n    <input type=\"text\" id=\"{{id}}_input\" data-label=\"{{label}}\" name=\"{{name}}\" {{#if value}} value=\"{{value}}\"{{/if}} class=\"form-input\" aria-required=\"{{required}}\" {{#if private_id}}data-field-type=\"{{private_id}}\"{{/if}}>\r\n</div>\r\n","components/custom/review-option-select":"<div class=\"review-input-container\">\r\n    {{#for 0 (lang 'number-of-review-options')}}\r\n    <p class=\"review-option-title\">{{lang (concat (concat 'review-options.review-option-'$index)'.title')}}</p>\r\n            {{> components/custom/review-option-input\r\n                inputIndex=$index\r\n                numberOfOptions=(lang (concat (concat 'review-options.review-option-'$index)'.number-of-options'))\r\n            }}\r\n    <input type=\"radio\" name=\"{{lang (concat (concat 'review-options.review-option-'$index)'.name')}}\" class=\"review-btn empty-btn\" value=\"\" checked=\"checked\" />\r\n    {{/for}}\r\n</div>\n","components/common/forms/multiline":"<div class=\"form-field\" id=\"{{id}}\" data-validation=\"{{validation}}\">\r\n    <label class=\"form-label\" for=\"{{id}}_input\">\r\n        {{#if required}}\r\n            <span class=\"req-asterisk\">*</span>{{label}}:\r\n        {{/if}}\r\n    </label>\r\n    <textarea name=\"{{name}}\" id=\"{{id}}_input\" data-label=\"{{label}}\" rows=\"{{rows}}\" aria-required=\"{{required}}\" class=\"form-input\" {{#if private_id}}data-field-type=\"{{private_id}}\"{{/if}}>{{value}}</textarea>\r\n</div>\r\n","components/custom/review-option-input":"{{!--\r\nwe need to pass this componenet two variables:\r\ninputIndex\r\nnumberOfOptions\r\n--}}\r\n\r\n{{#for 0 numberOfOptions}}\r\n<span class=\"review-btn-container\">\r\n    <input name=\"{{lang (concat (concat 'review-options.review-option-'../inputIndex)'.name')}}\" type=\"radio\" class=\"review-btn\"\r\n        value=\"{{lang (concat (concat 'review-options.review-option-'../inputIndex)'.title')}}\r\n        <strong>{{lang (concat (concat (concat 'review-options.review-option-'../inputIndex)'.option-') $index)}}</strong>\"\r\n        id=\"{{lang (concat (concat 'review-options.review-option-'../inputIndex)'.name')}}-{{$index}}\">\r\n    <label class=\"review-btn-label\" for=\"{{lang (concat (concat 'review-options.review-option-'../inputIndex)'.name')}}-{{$index}}\">\r\n        {{lang (concat (concat (concat 'review-options.review-option-'../inputIndex)'.option-') $index)}}\r\n    </label>\r\n</span>\r\n{{/for}}\n"}
